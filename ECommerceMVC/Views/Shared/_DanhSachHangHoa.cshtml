@{
	Layout = "_LayoutCustomer";
}

<!-- Single Page Header start -->
@RenderSection("BreadCum", required: false)
<!-- Single Page Header End -->
<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
	<div class="container py-5">
		<h1 class="mb-4">JSGC</h1>
		<div class="row g-4">
			<div class="col-lg-12">
				<div class="row g-4">
					<div class="col-xl-3">

						@await Html.PartialAsync("_TimKiemPanel")

					</div>
					<div class="col-6"></div>
					<div class="col-xl-3">
						<form id="watchform" method="get" asp-action="Index">
							<input type="hidden" name="loai" value="@ViewData["CurrentLoai"]" />
							<div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
								<label for="sortOrder">Default Sorting:</label>
								<select id="sortOrder" name="sortOrder" class="border-0 form-select-sm bg-light me-3" onchange="this.form.submit()">
									<option value="">Select</option>
									<option value="name_asc">Name Ascending</option>
									<option value="name_desc">Name Descending</option>
									<option value="price_asc">Price Ascending</option>
									<option value="price_desc">Price Descending</option>
								</select>
							</div>
						</form>
					</div>

				</div>
				<div class="row g-4">
					<div class="col-lg-3">
						<div class="row g-4">
							@await Component.InvokeAsync("MenuLoai")

							<div class="col-lg-12">
								<div class="mb-3">
									<h4 class="mb-2">Price</h4>
									<input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="500" value="0" oninput="amount.value=rangeInput.value">
									<output id="amount" name="amount" min-velue="0" max-value="500" for="rangeInput">0</output>
								</div>
							</div>
							
							
							
						</div>
					</div>
					<div class="col-lg-9">
						<div class="row g-4 justify-content-center">
							@RenderBody()
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
